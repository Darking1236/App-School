<div class="container-md p-5">
    <div class="row" >
        <div class="col-md-7 mx-auto" >
            <div class="card text-white bg-dark mb-3">
                <div class="card-header text-center">AGREGAR TAREA</div>
                <div class="card-body">
                    <form action="/homeworks/addHomework" method="post">
                        <div class="mb-3">
                             <input type="text" class="form-control" name="nombreTarea" placeholder="NOMBRE DE LA TAREA" autofocus>
                        </div>
                        <div class="container p-0">               
                                <div class="row">
                                    <div class="mb-3 col-md-5">
                                        <span>MATERIA</span>
                                        <select class="form-select"  type="text" name="nombre_Materia"  id="specificSizeSelect" >
                                        <option selected  >Elige la materia</option>
                                        {{#each links}}
                                            <option value="{{nombreMateria}}"  >{{nombreMateria}}</option>
                                         {{/each}}
                                    </select> 
                                    </div>
                                    <div class="mb-3 col-md-7">
                                        <span>HORA DE ENTREGA</span>
                                        <input type="Date"  class="form-control" name="fecha_entrega">
                                    </div> 
                                </div>                                                         
                         </div>
                         <div class="container p-0">               
                                <div class="row">
                                    <div class="mb-3 col-md-7 order-1">
                                        <select class="form-select"  type="text" name="estado"  >
                                            <option value="Pendiente">Pendiente</option>
                                            <option value="Proceso">Proceso</option>
                                            <option value="Finalizada">Finalizada</option>

                                    </select> 
                                    </div>
                                    <div class="  col-5 mb-3 col-md-5 align-self-center order-md-1">
                                        <span>ESTADO DE LA TAREA</span>
                                    </div> 
                                </div>                                                         
                         </div>    
              
                         
                        <div class="form-group mb-3">                            
                            <textarea name="descripcion" class="form-control"  rows="2" placeholder="Descripcion"></textarea>
                        </div> 
                        
                        <div class="mb-3">
                           <div class="d-grid gap-2">
                                <button class="btn btn-success" type="submit">AGREGAR</button>
                             </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>